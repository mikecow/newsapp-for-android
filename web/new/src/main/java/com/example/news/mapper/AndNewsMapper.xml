<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.news.mapper.AndNewsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.news.bean.AndNews">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="time" property="time" />
        <result column="src" property="src" />
        <result column="category" property="category" />
        <result column="pic" property="pic" />
        <result column="content" property="content" />
        <result column="url" property="url" />
        <result column="weburl" property="weburl" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, title, time, src, category, pic, content, url, weburl
    </sql>

</mapper>
